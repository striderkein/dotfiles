dcnt_id() {
  # $1 is must be CONTAINER_NAME
  docker ps -a | grep "$1" | awk '{print $1}'
}
dimg_id() {
  # $1 is must be IMAGE_NAME
  docker images | grep "$1" | awk '{print $3}'
}

